{
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "ocaml",
    "yaml",
    "json",
    "markdown",
    "java",
    "scala",
    "c",
    "cpp",
    "kotlin",
    "pandoc",
    "markdown"
  ],
  "clangd.path": "/usr/local/opt/llvm/bin/clangd",
  "prettier.proseWrap": "always",
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "disableWorkspaceFolders": true,
      "filetypes": ["go"]
    },
    "ocaml-lsp": {
      "command": "opam",
      "args": ["config", "exec", "--", "ocamllsp"],
      "filetypes": ["ocaml", "reason"]
    }
  }
}
